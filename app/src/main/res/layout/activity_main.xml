<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".MainActivity">

  <androidx.camera.view.PreviewView
    android:id="@+id/cameraView"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintBottom_toTopOf="@+id/bottomText"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />

  <com.airbnb.lottie.LottieAnimationView
      android:id="@+id/animation_view"
      android:layout_width="0dp"
      android:layout_height="0dp"
      app:lottie_rawRes="@raw/animation_scanning_5"
      app:lottie_loop="true"
      app:lottie_autoPlay="true"
      android:scaleType="fitXY"
      app:layout_constraintTop_toTopOf="@id/cameraView"
      app:layout_constraintStart_toStartOf="@id/cameraView"
      app:layout_constraintEnd_toEndOf="@id/cameraView"
      app:layout_constraintBottom_toTopOf="@id/bottomText"/>

    <TextView
      android:id="@+id/text_torch"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:padding="10dp"
      android:text="torch: off"
      android:textColor="@color/white"
      android:textStyle="bold"
      app:layout_constraintBottom_toTopOf="@id/bottomText"
      app:layout_constraintStart_toStartOf="parent"/>

  <TextView
        android:id="@+id/bottomText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="32dp"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="Barcode Value: " />

</androidx.constraintlayout.widget.ConstraintLayout>